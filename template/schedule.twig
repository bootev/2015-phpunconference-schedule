{% extends 'base.twig' %}

{% block content %}
    <h1>{{ title }}</h1>
    <table class="table table-striped">
        <colgroup>
            <col width="200">
            <col>
            <col>
            <col>
        </colgroup
        <thead>
            <tr>
                <th>Time</th>
                {% for roomName in rooms %}
                    <th>{{ roomName }}</th>
                {% endfor %}
            </tr>
        </thead>
        <tbody>
            {% for block in slots %}
                <tr>
                    <td>{{ block.time }}</td>
                    {% for slotName in block.rooms %}
                        <td {% if block.rooms|length == 1 %}colspan="{{ rooms|length }}" class="special"{% endif %}>{{ slotName|raw }}</td>
                    {% endfor %}
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
